{
    "$schema": "http://json-schema.org/schema#",
    "title": "iiot-services",
    "description": "The COPA-DATA zenon Iiot Services.",
    "type": "object",
    "required": ["ingress", "persistenseService"],
    "properties": {
        "certificateManagement": {
            "type": "object",
            "description": "Values specific to the Certificate Management Iiot Service",
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "persistingVolume": {
                    "type": "object",
                    "properties": {
                        "accessModes": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "name": {
                            "type": "string"
                        },
                        "size": {
                            "type": "string"
                        }
                    }
                },
                "port9410": {
                    "type": "integer"
                },
                "port9412": {
                    "type": "integer"
                }
            }
        },
        "containerimages": {
            "type": "object",
            "properties": {
                "iiotServicesRegistry": {
                    "type": "string"
                },
                "iiotServicesRepoPrefix": {
                    "type": "string"
                },
                "iiotServicesRepos": {
                    "type": "object",
                    "properties": {
                        "certificateManagementRepo": {
                            "type": "string"
                        },
                        "dataHubRepo": {
                            "type": "string"
                        },
                        "dataModellingRepo": {
                            "type": "string"
                        },
                        "dataStorageRepo": {
                            "type": "string"
                        },
                        "deviceManagementRepo": {
                            "type": "string"
                        },
                        "identityServiceRepo": {
                            "type": "string"
                        },
                        "iiotApiRepo": {
                            "type": "string"
                        },
                        "persistence-service": {
                            "type": "null"
                        },
                        "platformConfigurationRepo": {
                            "type": "string"
                        },
                        "proxyServiceRepo": {
                            "type": "string"
                        },
                        "serviceConfigurationStudioRepo": {
                            "type": "string"
                        },
                        "zenonLoggingServerRepo": {
                            "type": "string"
                        }
                    }
                },
                "imagePullPolicy": {
                    "type": "string"
                },
                "imagePullSecrets": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            }
                        }
                    }
                },
                "tags": {
                    "type": "object",
                    "properties": {
                        "iiotServices": {
                            "type": "string"
                        },
                        "mongodb": {
                            "type": "string"
                        },
                        "redis": {
                            "type": "string"
                        },
                        "zenonLoggingServer": {
                            "type": "string"
                        }
                    }
                },
                "thirdPartyRepos": {
                    "type": "object",
                    "properties": {
                        "mongodbRepo": {
                            "type": "string"
                        },
                        "redisRepo": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "dashboard": {
            "type": "object",
            "description": "Values specific to the Dashboarding Iiot Service",
            "properties": {
                "hostname": {
                    "type": "string"
                }
            }
        },
        "dataHub": {
            "type": "object",
            "description": "Values specific to the Data Hub Iiot Service",
            "required": ["loadbalancerIp"],
            "properties": {
                "certVolume": {
                    "type": "object",
                    "properties": {
                        "accessModes": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "name": {
                            "type": "string"
                        },
                        "size": {
                            "type": "string"
                        }
                    }
                },
                "hostname": {
                    "type": "string"
                },
                "loadbalancerIp": {
                    "type": "string"
                },
                "persistingVolume": {
                    "type": "object",
                    "properties": {
                        "accessModes": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "name": {
                            "type": "string"
                        },
                        "size": {
                            "type": "string"
                        }
                    }
                },
                "portExternal9411": {
                    "type": "integer"
                },
                "portInternal9411": {
                    "type": "integer"
                }
            }
        },
        "dataModelling": {
            "type": "object",
            "description": "Values specific to the Data Modelling Iiot Service",
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "port9440": {
                    "type": "integer"
                }
            }
        },
        "dataStorage": {
            "type": "object",
            "description": "Values specific to the Data Storage Iiot Service",
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "port9460": {
                    "type": "integer"
                }
            }
        },
        "deviceManagement": {
            "type": "object",
            "description": "Values specific to the Device Management Iiot Service",
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "port9415": {
                    "type": "integer"
                }
            }
        },
        "enableNodeSelectorLinux": {
            "description": "Enable this in order to deploy all pods on Linux nodes only.",
            "type": "boolean"
        },
        "healthprobes": {
            "type": "object",
            "description": "Timers for health probes. These define the intervals on which to check if the Iiot Services are running.",
            "properties": {
                "pollingPeriod": {
                    "type": "integer"
                },
                "startupDelay": {
                    "type": "integer"
                }
            }
        },
        "identityService": {
            "description": "Values specific to the Identity Service Iiot Service",
            "type": "object",
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "port9430": {
                    "type": "integer"
                }
            }
        },
        "iiotApi": {
            "type": "object",
            "description": "Values specific to the Iiot Api Iiot Service",
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "port9400": {
                    "type": "integer"
                }
            }
        },
        "ingress": {
            "type": "object",
            "description": "Values on how traffic is routed from the internet to the Iiot Services.",
            "required": ["iiotServicesDomain", "dataHubDomain"],
            "properties": {
                "annotations": {
                    "type": "array"
                },
                "dataHubDomain": {
                    "type": "string"
                },
                "enableIngress": {
                    "type": "boolean"
                },
                "enableProxyService": {
                    "type": "boolean"
                },
                "iiotServicesDomain": {
                    "type": "string"
                }
            }
        },
        "persistenseService": {
            "description": "Values specific to the Persistence Service Iiot Service. This is the mongoDB database.",
            "type": "object",
            "properties": {
                "mongodb": {
                    "type": "object",
                    "properties": {
                        "dbConnectionSuffix": {
                            "type": "null"
                        },
                        "dbHostname": {
                            "type": "string"
                        },
                        "dbPort": {
                            "type": "integer"
                        },
                        "replicaSetKey": {
                            "type": "null"
                        },
                        "useIncludedInstance": {
                            "type": "boolean"
                        },
                        "user": {
                            "type": "object",
                            "properties": {
                                "password": {
                                    "type": "null"
                                },
                                "username": {
                                    "type": "null"
                                }
                            }
                        }
                    }
                },
                "persistenseServiceName": {
                    "type": "string"
                },
                "persistingVolume": {
                    "type": "object",
                    "properties": {
                        "accessModes": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "name": {
                            "type": "string"
                        },
                        "size": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "platformConfiguration": {
            "type": "object",
            "description": "Values specific to the Platform Configuration Iiot Service",
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "port9470": {
                    "type": "integer"
                }
            }
        },
        "proxyService": {
            "type": "object",
            "description": "Values specific to the Proxy Service Iiot Service",
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "port9443": {
                    "type": "integer"
                }
            }
        },
        "redis": {
            "type": "object",
            "description": "Values specific to Redis, which is used by the Iiot Services",
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "redisPort6379": {
                    "type": "integer"
                }
            }
        },
        "serviceConfigurationStudio": {
            "type": "object",
            "description": "Values specific to the Service Configuration Studio Iiot Service",
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "port9450": {
                    "type": "integer"
                }
            }
        },
        "sharedVolume": {
            "type": "object",
            "description": "Values specific to the shared volume used by all Iiot Services to exchange information.",
            "properties": {
                "accessModes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "name": {
                    "type": "string"
                },
                "size": {
                    "type": "string"
                }
            }
        },
        "zenonLoggingServer": {
            "type": "object",
            "description": "Values specific to the zenon Logging Server Iiot Service",
            "properties": {
                "configVolume": {
                    "type": "object",
                    "properties": {
                        "accessModes": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "name": {
                            "type": "string"
                        },
                        "size": {
                            "type": "string"
                        }
                    }
                },
                "hostname": {
                    "type": "string"
                },
                "persistingVolume": {
                    "type": "object",
                    "properties": {
                        "accessModes": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "name": {
                            "type": "string"
                        },
                        "size": {
                            "type": "string"
                        }
                    }
                },
                "port50780": {
                    "type": "integer"
                }
            }
        }
    }
}
